<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_wood2"

    >


    <TextView
        android:id="@+id/winner1_LBL_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="The Winner is:"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        android:fontFamily="cursive"

        ></TextView>
    <ImageView
        android:id="@+id/winner1_IMG_woman"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/winner1_LBL_winner"
        android:src="@drawable/img_woman"

        ></ImageView>

    <TextView
        android:id="@+id/winner1_LBL_score"
        android:layout_width="150dp"
        android:layout_height="150dp"
     android:layout_alignParentRight="true"
        android:layout_margin="40dp"
        android:layout_centerInParent="true"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="70dp"></TextView>

    <ImageView
        android:id="@+id/winner1_IMG_close"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="9dp"
        android:layout_margin="40dp"
        android:src="@drawable/img_closed"

        ></ImageView>


</RelativeLayout>